<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_default_layout_match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.PartsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/PartsFragment_GV_Show_Images"
        style="@style/style_list_view"
        android:layout_gravity="center_horizontal" />

    <ProgressBar
        android:id="@+id/PartsFragment_ProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_9xl"
        android:indeterminateDrawable="@drawable/color_progressbar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/PartsFragment_TV_No_Data"
        style="@style/style_text_view_no_data" />
</LinearLayout>