<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DescriptionElarbaoonFragment">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/DescriptionElarbaoonFragment_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        app:tabBackground="@drawable/tab_layout_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/CustomTabLAyoutText"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/black" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/DescriptionElarbaoonFragment_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>