<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/style_default_layout_match_parent"
    tools:context=".ui.fragments.DescriptionElarbaoonFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/DescriptionElarbaoonFragment_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_layout_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextAppearance="@style/CustomTabLAyoutText"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/DescriptionElarbaoonFragment_TV_Name_elhadeth"
            style="@style/style_default_layout_wrap_content"
            android:layout_marginEnd="@dimen/dimens_mm"
            android:layout_marginTop="@dimen/dimens_l"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_xl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DescriptionElarbaoonFragment_TV_Number_elhadeth"
            style="@style/style_default_layout_wrap_content"
            android:layout_marginEnd="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_l"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_size_l"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:id="@+id/View"
        android:layout_gravity="right"
        android:layout_width="@dimen/defaultValueTowHandredTen"
        android:layout_height="@dimen/dimens_ssss"
        android:layout_marginEnd="@dimen/dimens_l"
        android:background="@color/colorAccent"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/DescriptionElarbaoonFragment_ViewPager"
        android:layout_below="@+id/View"
        android:layout_marginTop="@dimen/dimens_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>
